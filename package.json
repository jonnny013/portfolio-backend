{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "backend for portfolio",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "tsc": "tsc",
    "dev": "NODE_ENV=development ts-node-dev index.ts",
